<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
 
    
 
 
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:spinnerItemStyle">@style/StandardSpinnerItem</item>
  		<item name="android:spinnerDropDownItemStyle">@style/StandardSpinnerDropDownItem</item>
  		 
  	 
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
   	<style name="StandardSpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">	    
	     
	    <item name="android:textColor">#000000</item>
	</style>
	<style name="StandardSpinnerDropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">	 
	     <item name="android:textColor">#000000</item>
	</style>
	
   	 
		
  <style name="nowCardStyle" parent="android:Widget.TextView">
        <item name="android:background">@drawable/part2</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">2dp</item>
        <item name="android:textColor">#707070</item>

    </style>

    <style name="nowCardStyleTitle" parent="android:Widget.TextView">
        <item name="android:background">@drawable/part1</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">2dp</item>
        <item name="android:textColor">#707070</item>

    </style>
     
  <style name="CardTitle" parent="android:Widget.TextView">
      <!--  <item name="android:background">#6F8992</item> -->
       <item name="android:textColor">#ffffff</item>        
    </style>

</resources>
