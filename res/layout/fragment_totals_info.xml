<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:fillViewport="true" >

    <com.magapp.NowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e3e3e3">

         <RelativeLayout
             style="@style/nowCardStyle"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="fill_horizontal"
             android:minWidth="2dp"
             tools:context=".OrderInfoActivity" >

	       <TextView
	           android:id="@+id/totals_title"
	           style="@style/CardTitle"
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:layout_alignParentLeft="true"
	           android:layout_alignParentRight="true"
	           android:layout_alignParentTop="true"
	           android:layout_marginLeft="0dp"	           
	           android:layout_marginTop="0dp"
	           android:layout_weight="1"
	           android:paddingLeft="3dp"
	           android:paddingTop="1dp"
	           android:text="@string/totals_slide_title" />
	       
            <TableLayout
	           android:id="@+id/totals_table"
	           android:layout_width="fill_parent"
	           android:layout_height="fill_parent"
	           android:layout_alignLeft="@+id/totals_title"
	           android:layout_alignRight="@+id/totals_title"
	           android:layout_below="@+id/totals_title" >	                           
	           </TableLayout>

    </RelativeLayout>
        
        
    </com.magapp.NowLayout>

</ScrollView>