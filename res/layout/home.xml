<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >    
    
    <RelativeLayout
    android:layout_width="match_parent"
     android:layout_marginTop="20px"
    android:layout_marginLeft="20px"
    android:layout_marginRight="20px"     
    android:layout_height="wrap_content">
         
        
   <TextView
        android:id="@+id/OrdersChartTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Orders"
       
        android:textAppearance="?android:attr/textAppearanceLarge" />
 
    <Spinner
        android:id="@+id/PlotOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
        android:layout_above="@+id/mySimpleXYPlot"
        android:layout_toRightOf="@id/OrdersChartTitle"
        />
        
  <com.androidplot.xy.XYPlot
    android:layout_below="@+id/OrdersChartTitle"
    android:id="@+id/mySimpleXYPlot"
    android:layout_width="fill_parent"
    android:layout_height="200px" 
    androidPlot.graphWidget.marginRight="10dp"
    title="Yearly UFO Sightings"
    />
      </RelativeLayout>

 

</RelativeLayout>
